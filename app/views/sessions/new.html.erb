<% provide(:title, "Log In")%>
<h1>Log in</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      
      <%= f.label :email, class: "label-login" %>
      <%= f.text_field :email, class: "form-control" %>
      
      <%= f.label :password, class: "label-login" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
    <% end %>
    <p>新規ユーザーですか？<%= link_to "アカウント登録はこちら", signup_path %></p>
  </div>
</div>