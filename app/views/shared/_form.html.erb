<%= form_with(model: @user, local: true) do |f| %>
  <%= render 'shared/error_massages'%>
  
  <%= f.label :name, class: "lable-#{yield(:class_text)}" %>
  <%= f.text_field :name, class: "form-control" %>
   
  <%= f.label :email, class: "lable-#{yield(:class_text)}" %>
  <%= f.email_field :email, class: "form-control" %>
  
  <%= f.label :password, class: "lable-#{yield(:class_text)}" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, class: "lable-#{yield(:class_text)}" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  
  <%= f.submit "yield(:button_text)", class: "btn btn-block btn-primary btn-#{yield(:class_text)}" %>
<% end %>